<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns      = "http://www.w3.org/ns/widgets"
        xmlns:gap  = "http://phonegap.com/ns/1.0"
        id         = "helloworld.phonegapbuild.globalization"
        version    = "0.0.1">

  <name>Hello World: PhoneGap Orientation</name>

  <description>
    Hello World of PhoneGap Orientation plugin to be built 
    with PhoneGap Build Cloud.
  </description>

  <author href="http://himanen.info" email="tom@himanen.info">
    Tom Himanen
  </author>

  <gap:platforms>
    <gap:platform name="android" minVersion="2.1" />
  </gap:platforms>

  <gap:plugin name="org.apache.cordova.device-orientation" />

  <preference name="phonegap-version" value="3.0.0" />

</widget>
